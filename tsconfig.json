{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "capnp-es": ["./src/index.ts"],
      "capnp-es/compiler": ["./src/compiler/index.ts"],
      "capnp-es/capnp/*": ["./src/capnp/*.ts"],
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "include": ["src", "test", "playground"],
  "exclude": ["**/*.d.ts"]
}
